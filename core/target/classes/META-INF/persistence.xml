<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="nsfsApp" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/XAConexusDS</jta-data-source>
        <jar-file>../domain</jar-file>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <properties>

            <property name="tracking.annotations.hibernate.dialect" value="tracking.annotations.hibernate.CnxsOracleDialect"/>
            <property name="tracking.annotations.hibernate.show_sql" value="false"/>
            <property name="tracking.annotations.hibernate.format_sql" value="false"/>
            <property name="tracking.annotations.hibernate.cache.use_second_level_cache" value="true"/>
            <property name="tracking.annotations.hibernate.id.new_generator_mappings" value="true"/>
            <property name="tracking.annotations.hibernate.proc.param_null_passing" value="true"/>
            <property name="tracking.annotations.hibernate.jdbc.batch_size" value="50"/>
        </properties>
    </persistence-unit>
</persistence>
